<!DOCTYPE html>
<html lang="en">
<%- include("./parts/head.ejs") %> 
<body>
  
      <%- include("./parts/header.ejs") %> 
            <section class="main_animais">
                  <ul class="list">
                        <% allanimals.forEach(element => { %>
                              <li class="clearfix <% if(element.adotado == 1){%> adopted <% } %> ">
                                    <section class="left">
                                          <div class="animal-photo">
                                                <% if(element.tipo == 'Cachorro' || element.tipo == 'cachorro'){%> 
                                                      <img src="https://img.icons8.com/external-justicon-flat-justicon/64/000000/external-dog-dog-and-cat-justicon-flat-justicon-9.png"/>
                                                <% } else if(element.tipo == 'Gato' || element.tipo == 'gato') { %>
                                                      <img src="https://img.icons8.com/external-justicon-flat-justicon/64/000000/external-cat-dog-and-cat-justicon-flat-justicon-10.png"/>
                                                <% } %> 
                                          
                              
                                          </div>
                                          <h3><%= element.nome %></h3>
                                    </section>
                              
                                    <section class="right">
                                    <div class="info-box">
                                          <span class="price">Ra√ßa : <%= element.raca %> </span>
                                          <span class="status"> Status : <% if(element.adotado == 1) { %> Adotado üòÄ <% } else {%> A procura de um lar üôÅ  <% } %> </span>
                                    </div>
                                    <span class="actions">
                                          <a href="#viewAnimalModal" data-toggle="modal" class="more-info" data-id ="<%= element.animal_id %>"  class="firstbtn">Mais informa√ß√µes</a>
                                          <span>|</span>
                                          <a  href="#adoptAnimal" data-toggle="modal" class="adopt" data-user-id="<%=sessao.id %>" data-id="<%= element.animal_id %>" href="javascript:void(0);">Adotar</a>
                                    </span>
                                    </section>
                              </li>
                        <% })%>
                  </ul>

            </section>
     
      
      <%- include("./parts/footer.ejs") %> 
        
<div id="viewAnimalModal" class="modal fade">
            <div class="modal-dialog">
                  <div class="modal-content">
                        <form class="form_view" action="" method="POST">
                              <div class="modal-header">						
                                    <h4 class="modal-title">Informa√ß√µes do Animal</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                              </div>
                              <div class="animal-infos">
                                    <ul>

                                    </ul>

                              </div>
                              <div class="modal-footer">
                                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Sair">
                                    <input type="button" data-dismiss="modal" class="btn btn-info" value="Ok">
                              </div>
                        </form>
                  </div>
            </div>
</div>

<div id="adoptAnimal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form  class="form_Adopt" action="" method="POST">
				<div class="modal-header">						
					<h4 class="modal-title">Formulario de ado√ß√£o de animal</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">					
					<div class="form-group">
						<label>Nome</label>
						<input type="text" name="name" class="form-control" required>
					</div>
					<div class="form-group">
						<label>Idade</label>
						<input type="number" name="age" class="form-control" required>
					</div>
					<div class="form-group">
						<label>Endere√ßo</label>
						<input type="text" name="address" class="form-control" required>
					</div>
					<div class="form-group">
						<label>Telefone</label>
						<input type="tel" name="phone" class="form-control" required>
					</div>
                              <div class="form-group">
						<label>Cidade</label>
						<input type="text" name="city" class="form-control" required>
					</div>					
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
					<input type="submit" class="btn btn-success" value="Finalizar Cadastro">
				</div>
			</form>
		</div>
	</div>
</div>


</body>
</html>